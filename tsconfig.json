{
   "compilerOptions": {
      "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": ".",
      "outDir": "./dist",

      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
   },
   "exclude": ["node_modules"],
   "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
